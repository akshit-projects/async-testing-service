package ab.async.tester.controllers

import controllers.BaseControllerSpec
import ab.async.tester.service.team.TeamService
import ab.async.tester.controllers.auth.{
  AuthorizedAction,
  AuthenticatedAction,
  AuthenticatedRequest
}
import ab.async.tester.domain.team.Team
import ab.async.tester.domain.common.PaginatedResponse
import ab.async.tester.domain.user.{AuthenticatedUser, UserRole}
import play.api.test.Helpers._
import play.api.test.{FakeRequest, Helpers}
import play.api.libs.json.Json
import play.api.mvc._
import scala.concurrent.{Future, ExecutionContext}
import org.mockito.ArgumentMatchers.any
import io.circe.generic.auto._
import io.circe.syntax._

import utils.StubAuthorizedAction

class TeamsControllerSpec extends BaseControllerSpec {

  val mockTeamService = mock[TeamService]

  val testUser = AuthenticatedUser(
    "user1",
    "user@example.com",
    Some("User"),
    UserRole.User,
    false
  )
  val stubAuthorizedAction = new StubAuthorizedAction(testUser)

  val cc = Helpers.stubControllerComponents()
  val controller =
    new TeamsController(cc, stubAuthorizedAction, mockTeamService)

  "TeamsController" should {
    "getTeams should return teams" in {
      val teams =
        List(Team(Some("1"), "test team", "description", "org1", 0L, 0L))
      val response = PaginatedResponse(teams, 1, 10, 0)

      when(mockTeamService.getTeams(any, any, any[Int], any[Int]))
        .thenReturn(Future.successful(response))

      val request = FakeRequest(GET, "/api/v1/teams")
      val result = controller.getTeams(None, None, None, None).apply(request)

      status(result) mustBe OK
      contentAsJson(result) mustBe Json.parse(response.asJson.noSpaces)
    }

    "getTeam should return a team" in {
      val team = Team(Some("1"), "test team", "description", "org1", 0L, 0L)
      when(mockTeamService.getTeam("1"))
        .thenReturn(Future.successful(Some(team)))

      val request = FakeRequest(GET, "/api/v1/teams/1")
      val result = controller.getTeam("1").apply(request)

      status(result) mustBe OK
      contentAsJson(result) mustBe Json.parse(team.asJson.noSpaces)
    }

    "createTeam should create a team" in {
      val team = Team(Some("1"), "new team", "desc", "org1", 0L, 0L)
      when(mockTeamService.createTeam(any[Team]))
        .thenReturn(Future.successful(team))

      val request = FakeRequest(POST, "/api/v1/teams")
        .withJsonBody(Json.parse(team.asJson.noSpaces))

      val result = controller.createTeam().apply(request)

      status(result) mustBe CREATED
    }

    "deleteTeam should delete team" in {
      when(mockTeamService.deleteTeam("1")).thenReturn(Future.successful(true))

      val request = FakeRequest(DELETE, "/api/v1/teams/1")
      val result = controller.deleteTeam("1").apply(request)

      status(result) mustBe OK
    }
  }
}
